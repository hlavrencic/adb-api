  },
  "item": [
    {
      "name": "API Information",
      "item": [
        {
          "name": "Get API Info",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{base_url}}/",
              "host": ["{{base_url}}"],
              "path": [""]
            },
            "description": "Obtiene información general de la API"
          },
          "response": []
        }
      ]
    },
    {
      "name": "Device Management",
      "item": [
        {
          "name": "Connect Device",
          "request": {
            "method": "POST",
            "header": [],
            "url": {
              "raw": "{{base_url}}/devices/connect?ip={{device_ip}}&port={{device_port}}",
              "host": ["{{base_url}}"],
              "path": ["devices", "connect"],
              "query": [
                {
                  "key": "ip",
                  "value": "{{device_ip}}"
                },
                {
                  "key": "port",
                  "value": "{{device_port}}"
                }
              ]
            },
            "description": "Conecta a un dispositivo Android"
          },
          "response": []
        },
        {
          "name": "List Connected Devices",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{base_url}}/devices",
              "host": ["{{base_url}}"],
              "path": ["devices"]
            },
            "description": "Lista todos los dispositivos conectados"
          },
          "response": []
        },
        {
          "name": "Get Device Status",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{base_url}}/status?device_ip={{device_ip}}",
              "host": ["{{base_url}}"],
              "path": ["status"],
              "query": [
                {
                  "key": "device_ip",
                  "value": "{{device_ip}}"
                }
              ]
            },
            "description": "Obtiene el estado de un dispositivo específico"
          },
          "response": []
        },
        {
          "name": "Disconnect Device",
          "request": {
            "method": "POST",
            "header": [],
